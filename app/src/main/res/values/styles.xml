<resources>
    
    <!-- Base application theme. -->
    <style name = "AppTheme"
        parent = "Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name = "colorPrimary">@color/colorPrimary</item>
        <item name = "colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name = "colorAccent">@color/colorAccent</item>
        <item name="android:itemTextAppearance">@style/BotNaviTextAppearance</item>
    </style>

    <style name = "BotNaviTextAppearance">
        <item name = "android:fontFamily">@font/kopub_dotum_mid</item>
        <item name = "android:textSize">13sp</item>
    </style>

    <style name="AgreeDetailTitleText">
        <item name="android:padding">10dp</item>
        <item name="android:fontFamily">@font/kopub_dotum_mid</item>
        <item name="android:textSize">13sp</item>
        <item name="android:background">@drawable/background_agree_detail</item>
        <item name="android:gravity">left</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">@+id/gl_title_end</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="AgreeDetailContentText">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="layout_constraintStart_toStartOf">@+id/gl_title_end</item>
        <item name="layout_constraintEnd_toEndOf">@+id/gl_content_end</item>
        <item name="android:fontFamily">@font/kopub_dotum_light</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/colorDefaultText</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
    </style>
</resources>
