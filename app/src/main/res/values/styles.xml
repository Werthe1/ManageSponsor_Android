<resources>

    <!-- Base application theme. -->
    <style name="AppTheme"
           parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowActivityTransitions">true</item>
        <!-- specify enter and exit transitions -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name = "homeAsUpIndicator">@drawable/ic_back_24dp</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:itemTextAppearance">@style/BotNaviTextAppearance</item>
    </style>

    <style name = "BotNaviTextAppearance">
        <item name = "android:fontFamily">@font/kopub_dotum_mid</item>
        <item name = "android:textSize">13sp</item>
    </style>

    <style name="BotNaviTextAppearance">
        <item name="android:fontFamily">@font/kopub_dotum_mid</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name = "DetailToolbarText">
        <item name = "android:fontFamily">@font/godo_mid</item>
        <item name = "android:textColor">#282828</item>
        <item name = "android:textSize">17sp</item>
    </style>

    <style name = "MainToolbarText">
        <item name = "android:fontFamily">@font/godo_mid</item>
        <item name = "android:textColor">@color/colorDefaultText</item>
        <item name = "android:textSize">17sp</item>
    </style>

    <style name = "AgreeDetailSectionTitle">
        <item name = "android:textColor">#444444</item>
        <item name = "android:textSize">12sp</item>
        <item name = "android:padding">8dp</item>
        <item name = "android:layout_marginTop">15dp</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:fontFamily">@font/godo_mid</item>
        <item name = "android:background">@color/colorDefaultGray</item>
    </style>
    <style name="AgreeDetailTitleText">
        <item name="android:fontFamily">@font/kopub_dotum_light</item>
        <item name="android:textSize">13sp</item>
        <item name = "android:padding">5dp</item>
        <item name="android:gravity">left</item>
        <item name = "layout_constraintStart_toStartOf">@+id/gl_content_start</item>
        <item name="layout_constraintEnd_toEndOf">@+id/gl_title_end</item>
        <item name="android:textColor">@color/colorDefaultText</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="AgreeDetailContentText">
        <item name="android:fontFamily">@font/kopub_dotum_mid</item>
        <item name = "android:padding">5dp</item>
        <item name = "layout_constraintEnd_toEndOf">@+id/gl_content_end</item>
        <item name = "layout_constraintStart_toEndOf">@+id/gl_title_end</item>
        <item name="android:textSize">13sp</item>
        <item name = "android:layout_marginTop">12dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/colorDefaultText</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
    </style>
    <style name="TextLogin">
        <item name = "android:textColor">@android:color/white</item>
        <item name = "android:textColorHint">@android:color/white</item>
        <item name = "android:background">#35FFFFFF</item>
        <item name = "android:fontFamily">@font/kopub_dotum_light</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingEnd">9dp</item>
        <item name="android:paddingStart">9dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">13sp</item>
    </style>
</resources>
